pipeline {
    agent any

    stages {
        stage('build') {
            steps {
                echo 'start build1'
                withCredentials([usernamePassword(credentialsId: 'hashimalqady', usernameVariable: 'user', passwordVariable: 'password')])
                sh 'docker build -t hashimalqady/test1 .'
                echo 'start build2' 
                sh "docker login -u $User -p $Password"
                sh 'docker push hashimalqady/test1'
            }
        }
         stage('test') {
            steps {
                echo 'test complated'
            }
        }
         stage('deploy') {
            steps {
                sh 'docker run -p 4000:4000 -d hashimalqady/test1'
                echo 'deploy complated'
            }
         }    
    }
}